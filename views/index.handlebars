<h1>Bob's Burgers!</h1>

<h2>Fresh off the grill!</h2>

<ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Specials!</h2>

<ul>
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Special</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">special:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="eaten">Add to Menu?</label><br>
        <input type="radio" name="eaten" value="1" checked> added to menu <br>
        <input type="radio" name="eaten" value="0"> coming right up
    </div>

    <button type="submit">Add Special</button>
</form>